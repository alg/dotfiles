export LC_ALL=en_US.UTF-8
export PAGER="less -SF"
export EDITOR=nvim
export BROWSER=open

export PATH=$HOME/.bin:$PATH

# Android setup
export ANDROID_HOME=$HOME/Tools/android-sdk-macosx
